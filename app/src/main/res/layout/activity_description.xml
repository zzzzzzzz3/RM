<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="end"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/desc_edit"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/black_frame_shape"
        android:gravity="start"
        android:hint="@string/your_awesome_content_goes_here"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/default_text_size"
        />

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/blue_green_gradient_shape">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="114dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@drawable/default_click_selector"
            android:text="SAVE"
            android:textColor="@color/payment_bg_color"
            android:textSize="@dimen/title_text_size"/>
    </FrameLayout>

</LinearLayout>