<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/voucher_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Cash Voucher"/>
        <TextView
            android:id="@+id/voucher_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="RM5"
            android:layout_below="@+id/voucher_name_tv"/>
        <TextView
            android:id="@+id/voucher_remark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000 aviliable"
            android:textColor="@color/text_gray"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/voucher_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="36sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/plus_icon"
            android:layout_marginRight="17dp"
            />
        <ImageView
            android:id="@+id/plus_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/plus_icon"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/minus_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/minus_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>