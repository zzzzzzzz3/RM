<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="18sp"
            android:text="input device token"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/black_frame_square_shape"
            >
            <EditText
                android:id="@+id/device_token_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:textSize="18sp"
                android:textColor="@color/text_gray"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                />
            <com.quseit.payapp.widget.IconText
                android:id="@+id/scan_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textSize="24sp"
                android:text="@string/qrcode_font"
                android:textColor="@color/purple_color"
                android:background="@drawable/black_click_selector"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/blue_click_selector"
            android:layout_marginTop="10dp"
            android:text="OK"/>
    </LinearLayout>
</LinearLayout>